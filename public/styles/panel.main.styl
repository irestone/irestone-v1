&__main
  color #b9d4de
  background linear-gradient(to top, #0f2027, #203a43, #2c5364)
  width 14.5em
  flex-shrink 0
  position relative
  z-index 999

  a
    text-decoration none
    color #b9d4de

    &:hover
      color #00baff

    &:focus
      outline: none

  &__logo
    font-size 1.4em
    letter-spacing .1em
    text-align center
    color #efefef
    display block
    padding .8em 1.1em
    background: linear-gradient(0deg, #323839 0%, #151c1f 3%, #12181b 48%, #151c1f 97%, #2d3b40 100%)

  &__photo
    display block
    width (@width/1.9)
    height @width
    border 0.25em solid #405f69
    border-radius 50%
    margin 2rem auto 0
    overflow hidden
    box-shadow 0 0 .25em rgba(black, .3)

    img
      display block
      width 100%

  &__intro
    width 70%
    font-size 0.9em
    font-style italic
    line-height 1.5
    text-align center
    color #aebec5
    margin 2rem auto 0

  &__nav
    display flex
    flex-flow column
    align-items center
    margin-top 3rem

    &__section
      width 100%

      & + &
        margin-top 1rem

    &__title
      text-transform uppercase
      text-align center
      color #d2d3d4
      width 70%
      padding .8em 1.6em
      border-top 1px solid #405f69
      border-bottom 1px solid #405f69
      margin 0 auto

    &__links
      text-align center
      width 70%
      padding 1.6rem 0
      margin 0 auto

      &--contacts
        font-size 0.8em

      &--socials
        font-size 0.9em
        text-align center
        padding 1.6rem
        padding-top 0

        li
        a
          display inline-block

        li
          margin 0.2em

        a
          display flex
          align-items center
          justify-content center
          width 2em
          height @width
          border-radius 50%
          background #649db3

          &:hover
            background #7bacbe !important

        .icon
          width 65%
          height @width
          fill white

      & li + li
        margin-top .5em
