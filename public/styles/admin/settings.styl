.settings

  &__header
    font-size 2em

  &__body
    margin-top 2em

  &__section

    &__header
      font-size 1.5em

    &__body
      margin-top 2em

  &__field
    display flex

    & + &
      margin-top 2em

    & + &--submit
      margin-top 3em

    &__section
      margin-top 1.5em

      &__title
        padding-bottom .5em
        border-bottom 1px solid #000
        margin-bottom 1em
        font-style italic

    &__title
      min-width 8rem
      font-size 1.1em
      text-transform capitalize

    &--submit
      padding-left 8rem

.form

  &__field
    & + &
      margin-top 0.5em

    &__name
      display inline-block
      min-width 5em

  &__input
    border 0

    &:hover
    &:focus
      outline 1px solid #aaa

    & + ^[0]__button
      display none

    &:focus + ^[0]__button
      display inline

  &__button
    &[type='reset'][disabled]
      opacity .5
