basicTransition = all .2s ease-out

&__drawer
  background #0e181b
  // transition basicTransition
  position relative
  display flex

  &__content-holder
    position relative
    width 100%
    // transition basicTransition

  &[data-mode='closed'] &__content-holder
    width 0

  &__content
    display flex
    flex-flow column
    width 100%
    min-width 17em
    height 100%
    position absolute
    top 0
    right 0

  &[data-mode='ajar']
    width 17em

  &[data-mode='opened']
    width 40em

  &__header
    padding 1em
    background #da89c5

  &__tabs
    margin-top 1em

  &__tab
    display inline-block
    background slateblue
    cursor pointer

    & + &
      margin-left 0.5em

  &__tags
    margin-top 1em

  &__all-tags
    margin-top 1em

    &__link
      font-size 0.7em
      color #547079

  &__tag
    display inline-block
    background indianred
    cursor pointer

    & + &
      margin-left 0.5em

  &__close-drawer
    position absolute
    top 0
    right 0
    cursor pointer
    font-size 1.5em
    color white
    padding 0 0.8em .5em

  &__body
    padding 1.5em 1em 2.5em
    overflow auto

  &__item
    & + &
      margin-top 1em

  @import 'project'

  &__more-items
    text-align center
    margin-top 2.5em

    &__link
      color #00baff
      font-size 0.9em

  &__handle
    background #649db3
    width 0
    opacity 0
    cursor pointer
    position relative
    // transition all 3s

    &:hover
      background lighten(@background, 15%)

    &__label
      position absolute
      left 50%
      display inline-block
      transform rotate(90deg) translateX(1em)
      transform-origin left
      color white

  &[data-mode='closed'] &__handle
    width 3em
    opacity 1
