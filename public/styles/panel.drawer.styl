&__drawer
  background #0e181b

  &[data-mode='ajar']
    width 17em

  &[data-mode='opened']
    width 40em

  &__inner
    height 100%
    position relative
    display flex

  &__content-holder
    position relative
    width 100%

  &[data-mode='closed'] &__content-holder
    width 0

  &__content
    display flex
    flex-flow column
    width 100%
    min-width 17em
    height 100%
    position absolute
    top 0
    right 0

  &__header
    padding 1em
    background #da89c5

  &__tabs
    margin-top 1em

  &__tab
    display inline-block
    background slateblue
    cursor pointer
    margin 0 .5em .5em 0

    &.--active
      background lighten(slateblue, 30%)

  &__tags
    margin-top 1em

  &__tag
    display inline-block
    background indianred
    cursor pointer
    margin 0 .5em .5em 0

  &__all-tags
    margin-top 1em

    &__link
      font-size 0.7em
      color #547079

  &__close-drawer
    position absolute
    top 0
    right 0
    cursor pointer
    font-size 1.5em
    color white
    padding 0 0.8em .5em

  &__body
    padding 1.5em 1em 2.5em
    overflow auto

  &__item
    position relative

    & + &
      margin-top 1em

    img
      max-width 100%

    &[data-format='preview']
      ^[-1]__link
        position absolute
        top 0
        bottom 0
        left 0
        right 0
        display flex
        align-items center
        justify-content center
        background rgba(#102128, .7)
        font-size 1.3em
        text-decoration none
        color #6cfff9
        opacity 0
        transition all .3s ease-out
        cursor pointer

        &:hover
          opacity 1

  &__more-items
    text-align center
    margin-top 2.5em

    &__link
      color #00baff
      font-size 0.9em

  &__handle
    background #649db3
    width 0
    opacity 0
    cursor pointer
    position relative

    &:hover
      background lighten(@background, 15%)

    &__label
      position absolute
      left 50%
      display inline-block
      transform rotate(90deg) translateX(1em)
      transform-origin left
      color white

  &[data-mode='closed'] &__handle
    width 3em
    opacity 1
