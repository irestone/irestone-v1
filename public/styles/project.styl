.project
  position relative

  img
    max-width 100%

  &[data-format='preview']
    ^[-1]__link
      position absolute
      top 0
      bottom 0
      left 0
      right 0
      display flex
      align-items center
      justify-content center
      background rgba(#102128, .7)
      font-size 1.3em
      text-decoration none
      color #6cfff9
      opacity 0
      transition all .3s ease-out

      &:hover
        opacity 1
